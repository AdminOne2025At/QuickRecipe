# مثال لملف المتغيرات البيئية (.env)
# انسخ هذا الملف إلى .env وأضف القيم المناسبة
# أو استخدم نظام ملفات السيكريت في مجلد config/secrets/

# معلومات قاعدة البيانات PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/quickrecipe
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=quickrecipe
PGPORT=5432

# الجلسة
SESSION_SECRET=your_super_secret_session_key_here

# Firebase (للمصادقة)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=fast-recipe-2025
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# مفاتيح API لتوليد الوصفات
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# API أخرى
YOUTUBE_API_KEY=your_youtube_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ملاحظة: يفضل استخدام نظام ملفات السيكريت في مجلد config/secrets/ بدلاً من ملف .env
# عند رفع المشروع إلى GitHub أو أي منصة مشابهة